    <numericGradient id="numeric">
    	<treeDataLikelihood idref="treeLikelihood"/>    	
    	<parameter idref="loc.coefficients"/>
    </numericGradient>
    
    <report>
      SERIAL
      <numericGradient idref="numeric"/>
    </report>
    
    <parallelNumericGradient id="parallel">
    	<main>
	    	<treeDataLikelihood idref="treeLikelihood"/>
	    	<parameter idref="loc.coefficients"/>    		
    	</main>
    	<worker>
	    	<treeDataLikelihood idref="worker1"/>
	    	<parameter idref="loc.coefficients.worker"/>
	    </worker>
    </parallelNumericGradient>
    
    <report>
      PARALLEL
      <parallelNumericGradient idref="parallel"/>
    </report>

    <glmSubstitutionModelGradient id="gradient1" traitName="loc" effects="fixed">
    	<treeDataLikelihood idref="treeLikelihood"/>
    	<glmSubstitutionModel idref="loc.model"/>
    </glmSubstitutionModelGradient>

