  colAttMat <- grep(paste0(traitName,".attenuation.matrix"), colnames(dat_log))
  hh <- sapply(1:length(dat_tree), sum_vars)
  if (is.vector(hh)) return(t(t(hh)))
  return(t(hh))
}

