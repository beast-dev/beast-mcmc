<?xml version="1.0" standalone="yes"?>
<beast>

	<taxa id="taxa">
		<taxon id="A">
			<attr name="X">11 12</attr>
		</taxon>
		<taxon id="B">
			<attr name="X">1 2</attr>
		</taxon>
		<taxon id="C">
			<attr name="X">3 3</attr>
		</taxon>
	</taxa>

	<newick id="tree">
		((A:1,B:1):1,C:2);
	</newick>

	<treeModel id="treeModel">
		<newick idref="tree"/>
		<rootHeight>
			<parameter id="treeModel.rootHeight"/>
		</rootHeight>
		<nodeHeights internalNodes="true">
			<parameter id="treeModel.internalNodeHeights"/>
		</nodeHeights>
		<nodeHeights internalNodes="true" rootNode="true">
			<parameter id="treeModel.allInternalNodeHeights"/>
		</nodeHeights>
		<nodeTraits name="X" rootNode="false" internalNodes="false" leafNodes="true" traitDimension="2">
			<parameter id="leafTraits"/>
		</nodeTraits>
	</treeModel>

    <multivariateDiffusionModel id="diffusionModel">
		<precisionMatrix>
			<matrixParameter id="precisionMatrix">
				<parameter id="col1" value="1.00 0.00"/>
				<parameter id="col2" value="0.00 1.00"/>
			</matrixParameter>
		</precisionMatrix>
	</multivariateDiffusionModel>

	<multivariateTraitLikelihood id="oldLikelihood" traitName="X" integrateInternalTraits="true">
		<multivariateDiffusionModel idref="diffusionModel"/>
		<treeModel idref="treeModel"/>
		<traitParameter>
			<parameter idref="leafTraits"/>
		</traitParameter>
        <conjugateRootPrior>
            <meanParameter>
                <parameter value="0.0 0.0"/>
            </meanParameter>
            <priorSampleSize>
                <parameter value="10.0"/>
            </priorSampleSize>
        </conjugateRootPrior>
	</multivariateTraitLikelihood>

	<report>
		Old likelihood =
		<multivariateTraitLikelihood idref="oldLikelihood"/>
	</report>

	<traitDataLikelihood id="scalarLikelihood" traitName="X">
		<multivariateDiffusionModel idref="diffusionModel"/>
		<treeModel idref="treeModel"/>
		<traitParameter>
			<parameter idref="leafTraits"/>
		</traitParameter>
        <conjugateRootPrior>
            <meanParameter>
                <parameter value="0.0 0.0"/>
            </meanParameter>
            <priorSampleSize>
                <parameter value="10.0"/>
            </priorSampleSize>
        </conjugateRootPrior>
	</traitDataLikelihood>

	<report>
		Scalar likelihood =
		<traitDataLikelihood idref="scalarLikelihood"/>
	</report>
	
	<traitDataLikelihood id="fullLikelihood" traitName="X" forceFullPrecision="true">
		<multivariateDiffusionModel idref="diffusionModel"/>
		<treeModel idref="treeModel"/>
		<traitParameter>
			<parameter idref="leafTraits"/>
		</traitParameter>
        <conjugateRootPrior>
            <meanParameter>
                <parameter value="0.0 0.0"/>
            </meanParameter>
            <priorSampleSize>
                <parameter value="10.0"/>
            </priorSampleSize>
        </conjugateRootPrior>
	</traitDataLikelihood>

	<report>
		Full likelihood =
		<traitDataLikelihood idref="fullLikelihood"/>
	</report>

	<!-- START GRADIENTS -->

	<report>
		Old gradient =
		<traitGradientOnTree>
			<multivariateTraitLikelihood idref="oldLikelihood"/>
		</traitGradientOnTree>
	</report>

	<report>
		Scalar gradient =
		<traitGradientOnTree traitName="X">
			<traitDataLikelihood idref="scalarLikelihood"/>
		</traitGradientOnTree>
	</report>
	
	<report>
		Full gradient =
		<traitGradientOnTree traitName="X">
			<traitDataLikelihood idref="fullLikelihood"/>
		</traitGradientOnTree>
	</report>
	
	<!-- OU DIAGONAL MODEL -->
		
	<traitDataLikelihood id="ouLikelihood" traitName="X" forceFullPrecision="true">
		<multivariateDiffusionModel idref="diffusionModel"/>
		<treeModel idref="treeModel"/>
		<traitParameter>
			<parameter idref="leafTraits"/>
		</traitParameter>
        <conjugateRootPrior>
            <meanParameter>
                <parameter value="0.0 0.0"/>
            </meanParameter>
            <priorSampleSize>
                <parameter value="10.0"/>
            </priorSampleSize>
        </conjugateRootPrior>
        <optimalTraits>
			<strictClockBranchRates>
				<rate>
					<parameter id="opt.1" value="1.0"/>
				</rate>
			</strictClockBranchRates>
			<strictClockBranchRates>
				<rate>
					<parameter id="opt.2" value="2.0"/>
				</rate>
			</strictClockBranchRates>
		</optimalTraits>
        <strengthOfSelectionMatrix>
            <diagonalMatrix id="strengthOfSelectionMatrix">
                <parameter id="alpha.diag" value="1.0 2.0" lower="0.0 0.0"/>
            </diagonalMatrix>
        </strengthOfSelectionMatrix>
	</traitDataLikelihood>

	<report>
		Diagonal OU gradient =
		<traitGradientOnTree traitName="X">
			<traitDataLikelihood idref="ouLikelihood"/>
		</traitGradientOnTree>
	</report>

</beast>
