    <assertEqual tolerance="1e-3" verbose="true" charactersToStrip="{}">
        <message>
            Check trait variance
        </message>
        <actual regex="(?s)Trait variance:\s*(.*?)\n\n">
            <traitDataLikelihood idref="traitLikelihood"/>
        </actual>
        <expected>
            1.1108945624634572  -0.009744689144416303  0.18320015591502628
            0.011693626973299523  0.5262132137984799  0.10719158058857918
            0.2241278503215747  0.08575326447086337  0.3878386279477684
