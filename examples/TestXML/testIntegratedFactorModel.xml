			<matrixParameter>
				<parameter value="1.00 0.00"/>
				<parameter value="0.00 1.00"/>
			</matrixParameter>
		</scaleMatrix>
		<data>
			<matrixParameter idref="precisionMatrix"/>
		</data>
	</multivariateWishartPrior>
 -->


	<integratedFactorModel id="factorModel" traitName="X" nugget="0">
		<loadings>
			<matrixParameter id="loadings"> <!-- parameters are column-major -->
				<parameter value="2 0"/>
				<parameter value="1 1"/>
				<parameter value="-1 1"/>
			</matrixParameter>
<!--
			<matrixParameter id="loadings">
				<parameter value="1"/>
				<parameter value="2"/>
			</matrixParameter>
 -->

		</loadings>
		<precision>
			<parameter id="precision" value="1.0 2.0 3.0"/>
		</precision>
		<treeModel idref="treeModel"/>
		<traitParameter>
			<parameter idref="leafTraits"/>
		</traitParameter>
	</integratedFactorModel>

	<traitDataLikelihood id="traitLikelihood" traitName="latent">
		<multivariateDiffusionModel idref="diffusionModel"/>
		<treeModel idref="treeModel"/>
		<integratedFactorModel idref="factorModel"/>
        <conjugateRootPrior>
            <meanParameter>
                <parameter value="0.0 0.0"/>
            </meanParameter>

<!--
             <meanParameter>
                <parameter value="0.0"/>
            </meanParameter>
 -->

            <priorSampleSize>
                <parameter value="3.0"/>
            </priorSampleSize>
        </conjugateRootPrior>
<!--
        <missingIndicator>
        	<parameter id="missingMask"/>
        </missingIndicator>
 -->

	</traitDataLikelihood>

	<operators id="operators">

